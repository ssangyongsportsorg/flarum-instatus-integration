{
  "name": "maicol07/flarum-instatus-integration",
  "description": "Instatus integration for Flarum",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "AGPL-3.0-or-later",
  "require": {
    "php": ">=8.0",
    "flarum/core": "^1",
    "illuminate/support": "^8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "authors": [
    {
      "name": "maicol07",
      "email": "maicolbattistini@live.it",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Maicol07\\Instatus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Maicol07\\Instatus\\Tests\\": "tests/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Instatus integration",
      "category": "feature",
      "icon": {
        "name": "fa-duotone fa-planet-ringed",
        "backgroundColor": "black",
        "color": "white"
      }
    },
    "flagrow": {
      "discuss": ""
    }
  },
  "scripts": {
    "test": [
      "@test:unit",
      "@test:integration"
    ],
    "test:unit": "phpunit -c tests/phpunit.unit.xml",
    "test:integration": "phpunit -c tests/phpunit.integration.xml",
    "test:setup": "@php tests/integration/setup.php"
  },
  "scripts-descriptions": {
    "test": "Runs all tests.",
    "test:unit": "Runs all unit tests.",
    "test:integration": "Runs all integration tests.",
    "test:setup": "Sets up a database for use with integration tests. Execute this only once."
  }
}
